<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/button_nav_stats_normal"
    android:layout_margin="5dp">

        <ImageView
            android:layout_width="@dimen/medalsize"
            android:layout_height="@dimen/medalsize"
            android:id="@+id/medalDetailimage"
            android:src="@android:drawable/ic_menu_help"
            android:layout_margin="10dp"
            android:layout_centerHorizontal="true" />


        <TextView
            style="@style/section_box_content_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/zero"
            android:id="@+id/medalValue"
            android:layout_below="@+id/medalDetailimage"
            android:layout_centerHorizontal="true" />

</RelativeLayout>